#!/usr/bin/env bash
# This script displays the time for 12hrs 59minutes in the 12hr format

# Initialize hour to 0 and minute to 1

hour=0
minute=1

# Loop for 12 hours
while [ $hour -le 12 ]; do
    # Display hour and minute
    printf "%02d:%02d\n" $hour $minute

    # Increment minute by 1
    minute=$((minute + 1))

    # Check if minute reached 60
    if [ $minute -eq 60 ]; then
        # Reset minute to 1 and increment hour by 1
        minute=1
        hour=$((hour + 1))
    fi
done
